{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build the App",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/build_run_app.sh"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$msCompile",
            "windows": {
                "command": "powershell",
                "args": [
                    "-ExecutionPolicy",
                    "Bypass",
                    "-File",
                    "${workspaceFolder}/build_run_app.ps1"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "${workspaceFolder}/build_run_app.sh"
                ]
            }
        },
        {
            "label": "Run the App",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/helloworld/bin/release/net6.0/helloworld.dll"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": [],
            "windows": {
                "command": "dotnet",
                "args": [
                    "run",
                    "--project",
                    "${workspaceFolder}/helloworld/bin/release/net6.0/helloworld.exe"
                ]
            },
            "linux": {
                "command": "dotnet",
                "args": [
                    "run",
                    "--project",
                    "${workspaceFolder}/helloworld/bin/release/net6.0/helloworld.dll"
                ]
            }
        }
    ]
}